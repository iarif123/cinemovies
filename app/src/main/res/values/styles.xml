<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="default_alert_dialog" parent="Theme.AppCompat.Dialog.Alert">
        <item name="android:windowTitleStyle">@style/AlertDialogTitleStyle</item>
        <item name="android:textColorPrimary">@color/colorPrimary</item>
        <item name="android:background">@color/colorPrimary</item>
    </style>
    <style name="AlertDialogTitleStyle">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Title</item>
    </style>

    <!--Loading Spinner-->
    <style name="CircularProgress" parent="Theme.AppCompat.Light">
        <item name="colorAccent">@color/md_purple_900</item>
    </style>

</resources>
